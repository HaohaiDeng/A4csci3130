{
  "rules": {
    ".read": true,
    ".write": true,
    "Businesses":{
     	"$bid":{
        ".write": "$bid === auth.id",
        "Bid":{
          ".validate": "newData.isNumber() &&
              			newData.val() <= 999999999 &&
                        newData.val() >= 100000000"
        },
        "Name":{
          ".validate": "newData.isString() &&
              			newData.val().length <= 48 &&
          				newData.val().length >= 2"
        },
        "Pbusiness":{
          ".validate": "newData.val().matches(/Fisher|Distributor|Processor|Fish Monger/)"
        },
        "Address":{
          ".validate": "newData.isString() &&
              			newData.val().length < 50"
        },
        "Province":{
          ".validate": "newData.val().matches(/AB|BC|MB|NB|NL|NS|NT|NU|ON|PE|QC|SK|YT/)"
        }
      }   
    }
  }
}